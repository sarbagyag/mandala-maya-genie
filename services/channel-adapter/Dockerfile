FROM golang:1.22-alpine AS builder

WORKDIR /app

COPY go.mod go.sum ./
RUN go mod download

COPY . .
RUN CGO_ENABLED=0 GOOS=linux go build -o /channel-adapter .

FROM alpine:latest

RUN apk --no-cache add ca-certificates
COPY --from=builder /channel-adapter /channel-adapter

EXPOSE 8081

CMD ["/channel-adapter"]
